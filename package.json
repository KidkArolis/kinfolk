{
  "name": "kinfolk",
  "version": "0.7.0",
  "description": "Atoms and selectors for React",
  "main": "dist/cjs/kinfolk.cjs",
  "module": "dist/esm/kinfolk.mjs",
  "sideEffects": false,
  "engines": {
    "node": ">=16"
  },
  "scripts": {
    "test": "npm run lint && ava",
    "lint": "healthier && prettier --check '**/*.js'",
    "format": "prettier --write '**/*.js'",
    "coverage": "nyc --reporter html ava",
    "build": "node ./build.js",
    "watch": "node ./build.js -w"
  },
  "author": "Karolis Narkevicius <hey@k8.lt>",
  "license": "ISC",
  "devDependencies": {
    "@swc/cli": "^0.3.12",
    "@swc/core": "^1.4.17",
    "@testing-library/react": "^15.0.5",
    "ava": "^6.1.2",
    "execa": "^8.0.1",
    "healthier": "^7.0.0",
    "jsdom": "^24.0.0",
    "nyc": "^15.1.0",
    "pirates": "^4.0.6",
    "prettier": "^3.2.5"
  },
  "ava": {
    "files": [
      "test/*.test.js"
    ],
    "require": ["./test/register.js"]
  },
  "healthier": {
    "ignore": [
      "dist"
    ]
  },
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "require": "./dist/cjs/kinfolk.cjs",
      "import": "./dist/esm/kinfolk.mjs"
    }
  }
}
