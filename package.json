{
  "name": "kinfolk",
  "version": "0.4.0",
  "description": "Atoms and selectors for React",
  "main": "dist/cjs/kinfolk.js",
  "module": "dist/esm/kinfolk.js",
  "sideEffects": false,
  "engines": {
    "node": ">=16"
  },
  "scripts": {
    "test": "npm run lint && ava",
    "lint": "healthier && prettier --check '**/*.js'",
    "format": "prettier --write '**/*.js'",
    "coverage": "nyc --reporter html ava",
    "build": "node ./build.js",
    "watch": "node ./build.js -w"
  },
  "author": "Karolis Narkevicius <hey@k8.lt>",
  "license": "ISC",
  "devDependencies": {
    "@swc/cli": "^0.1.62",
    "@swc/core": "^1.3.95",
    "@swc/register": "^0.1.10",
    "@testing-library/react": "^14.0.0",
    "ava": "^5.3.1",
    "execa": "^8.0.1",
    "healthier": "^7.0.0",
    "jsdom": "^22.1.0",
    "nyc": "^15.1.0",
    "prettier": "^3.0.3"
  },
  "ava": {
    "files": [
      "test/*.test.js"
    ],
    "require": [
      "@swc/register"
    ]
  },
  "healthier": {
    "ignore": [
      "dist"
    ]
  }
}
