{
  "name": "kinfolk",
  "version": "0.7.2",
  "description": "Atoms and selectors for React",
  "main": "dist/cjs/kinfolk.cjs",
  "module": "dist/esm/kinfolk.mjs",
  "sideEffects": false,
  "engines": {
    "node": ">=16"
  },
  "scripts": {
    "test": "npm run lint && ava",
    "lint": "healthier && prettier --check '**/*.js'",
    "format": "prettier --write '**/*.js'",
    "coverage": "nyc --reporter html ava",
    "build": "node ./build.js",
    "watch": "node ./build.js -w"
  },
  "author": "Karolis Narkevicius <hey@k8.lt>",
  "license": "ISC",
  "devDependencies": {
    "@swc/cli": "^0.6.0",
    "@swc/core": "^1.11.18",
    "@testing-library/react": "^16.3.0",
    "ava": "^6.2.0",
    "execa": "^9.5.2",
    "healthier": "^7.0.0",
    "jsdom": "^26.0.0",
    "nyc": "^17.1.0",
    "pirates": "^4.0.7",
    "prettier": "^3.5.3"
  },
  "ava": {
    "files": [
      "test/*.test.js"
    ],
    "require": [
      "./test/register.js"
    ]
  },
  "healthier": {
    "ignore": [
      "dist"
    ]
  },
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "require": "./dist/cjs/kinfolk.cjs",
      "import": "./dist/esm/kinfolk.mjs"
    }
  }
}
