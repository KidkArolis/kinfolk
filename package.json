{
  "name": "kinfolk",
  "version": "1.0.0",
  "description": "Atoms and selectors for React",
  "main": "src/kinfolk.js",
  "directories": {
    "src": "src"
  },
  "scripts": {
    "test": "npm run lint && ava",
    "lint": "healthier && prettier --check '**/*.js'",
    "format": "prettier --format '**/*.js'",
    "coverage": "nyc --reporter html ava"
  },
  "author": "Karolis Narkevicius <hey@k8.lt>",
  "license": "ISC",
  "devDependencies": {
    "@swc/core": "^1.3.60",
    "@swc/register": "^0.1.10",
    "@testing-library/react": "^14.0.0",
    "ava": "^5.3.0",
    "healthier": "^6.3.0",
    "jsdom": "^22.1.0",
    "nyc": "^15.1.0",
    "prettier": "^2.8.8"
  },
  "ava": {
    "files": [
      "test/*.test.js"
    ],
    "require": [
      "@swc/register"
    ]
  }
}
